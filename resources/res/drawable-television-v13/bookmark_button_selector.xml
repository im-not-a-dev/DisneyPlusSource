<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/playButtonColorNormal"/>
            <corners android:radius="?attr/buttonBaseCornerRadius"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/playButtonColorPressed"/>
            <corners android:radius="?attr/buttonBaseCornerRadius"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/vader_play_button_background"/>
            <corners android:radius="?attr/buttonBaseCornerRadius"/>
        </shape>
    </item>
</selector>
